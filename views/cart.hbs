<!DOCTYPE html>
<html lang="en">
<head>
  <title>Cart</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  {{> navbar }}

  <div class="container mt-4">
    <h2>Your Cart</h2>

    {{#if cart.items.length}}
      <ul class="list-group">
        {{#each cart.items}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <h5>{{this.product.name}}</h5>
              <p>Price: ${{this.product.price}}</p>
              <form action="/cart/update/{{this.product._id}}" method="POST" class="form-inline">
                <label for="quantity">Quantity:</label>
                <input type="number" name="quantity" value="{{this.quantity}}" min="1" class="form-control mx-2" style="width: 60px;">
                <button type="submit" class="btn btn-primary btn-sm">Update</button>
              </form>
            </div>
            <form action="/cart/remove/{{this.product._id}}" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Remove</button>
            </form>
          </li>
        {{/each}}
      </ul>
      <div class="mt-4 text-right">
        <a href="/checkout" class="btn btn-success">Buy Now</a>
      </div>
    {{else}}
      <p>Your cart is empty.</p>
    {{/if}}
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
